<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book.id), method: :delete, class: "favorite-true", remote: true do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id), method: :post, class: "favorite-folse", remote: true do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% end %>